{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lens-app",
  "version": "0.1.0",
  "identifier": "com.saif.lens-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false
    },
    "windows": [
      {
        "title": "lens-app",
        "width": 500,
        "height": 310,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": false,
        "shadow": false,
        "acceptFirstMouse": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ3QkRFMzAwM0IxOEJBRkEKUldUNnVoZzdBT085MTVwUWpjRk54aHI4T1g2STJnYjhaNWNXdWpQd0xOMUwrRVBHdmdGOVh2azgK",
      "endpoints": [
        "https://github.com/saif0200/lens-app/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
